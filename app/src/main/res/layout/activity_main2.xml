<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    tools:context="com.a2zdaddy.myquizapp.Main2Activity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result Page: "
            android:id="@+id/descc"
            android:textColor="#35df2a"
            android:textSize="40sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:id="@+id/marks"
        android:layout_below="@+id/descc"
        android:textColor="#be1a0b"
        android:textSize="40sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="/"
        android:paddingLeft="40dp"
        android:layout_below="@+id/descc"
        android:textColor="#d92c23"
        android:textSize="40sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/question"
        android:text="0"
        android:paddingLeft="80dp"
        android:layout_below="@+id/descc"
        android:textColor="#e26009"
        android:textSize="40sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="Retry"
            android:id="@+id/retrybt"
            android:onClick="retry"
            android:background="#e4b013"
             />






</RelativeLayout>
